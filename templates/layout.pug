doctype html
html
  block head
    head
      block title
        title sudo humans
      meta(http-equiv='X-UA-Compatible', content='IE=Edge')
      meta(charset='UTF-8')
      link(rel='stylesheet', href=settings.base_url + '/style.css')
  body
    block header
      #header
        h1
          span(class='humans') / 
            a(href=settings.base_url) collectives
            |  / 
            if collective
              a(href=collective.url)= collective.name
              |  / 
            if current_user
              a(href=settings.base_url + '/~' + current_user.username) ~#{current_user.username}
        div(class='buttons')
          if current_user
            a(class='bigred profile-link', href=settings.base_url + '/~' + current_user.username) 
              | profile
            a(class='bigred sign-out-link', href=current_user.sign_out_url)
              | sign out
          else
            a(class='bigred', href=settings.base_url + '/account/create')
              | create account
            a(class='bigred', href=settings.base_url + '/account/sign-in')
              | sign in
    block content
    block footer
      #footer
        p#copyright
          span(style={
            "-moz-transform": "scaleX(-1)",
            "-o-transform": "scaleX(-1)",
            "-webkit-transform": "scaleX(-1)",
            "transform": "scaleX(-1)",
            "display": "inline-block"
          })
            | Â©
          |  CopyLeft 
          a(href=software.author_url)= software.author_name
          | , All Wrongs Reversed, #{new Date().getFullYear()}.
        p#software-info This is 
          if software.version
            | #{software.name} 
            a(href=software.version_url) #{software.version}
          else
            a(href=software.url) #{software.name}
          | . 
          a(href=software.new_issue_url target='_blank') Report
          |  issues. 
          a(href=software.url target='_blank') Fork
          |  code.
